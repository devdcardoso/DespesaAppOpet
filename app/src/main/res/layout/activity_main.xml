<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Divisor de Despesa"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
       />
    <EditText
        android:layout_marginTop="25dp"
        android:id="@+id/editValor"
        android:hint="Digite o valor da despesa"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekPessoas"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="20"
        android:progress="1"
        />

    <TextView
        android:id="@+id/textPessoas"
        android:text="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkAcrescimo"
        android:text="Adicionar 10% ao valor."
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textDivisao"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginTop="25dp"
        android:text="R$ 0.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>